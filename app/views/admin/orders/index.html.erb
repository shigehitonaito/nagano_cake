<h1>注文履歴一覧</h1>

<table>
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td>
				<%= link_to admin_order_path(order.id) do %>
				<%= order.created_at.to_s(:datetime_jp) %>
				<% end %>
			<td>
			<td><%= order.end_user.family_name %><%= order.end_user.first_name %></td>
			<td>
				<% @item_amount = 0 %>
				<%  order.order_detiles.each do |order_detile| %>
				  <% @item_amount += order_detile.amount %>
				<% end %>
				<%= @item_amount %>
			</td>
			<td><%= order.order_status_i18n %></td>

		</tr>
		<% end %>

	</tbody>
</table>