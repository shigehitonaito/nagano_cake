


<%= form_for @genre,url: admin_genres_path do  |f| %>
  <%= f.text_field :name %>
  <%= f.radio_button :active_status, true %>
  <%= f.label :active_status, "有効" %>
  <%= f.radio_button :active_status, false %>
  <%= f.label :active_status, "無効" %>
  <%= f.submit "追加" %>
<% end %>



<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.name %></td>
			<% if genre.active_status == true %>
    　　　　　　<td>有効</td>
 　　　　　   <% else %>
               <td>無効</td>
            <% end %>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %><td>
		</tr>
		<% end %>
	</tbody>
</table>



