 <%= link_to "カートを空にする", public_destroy_all_path, method: :delete %>
<table border >
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @cart_items.each do |cart_item| %>
		<tr>
			<td><%= attachment_image_tag cart_item.item, :image, :fill, 60, 60 %> <%= cart_item.item.name %></td>
			<td><%= cart_item.item.untax_price*108/100 %></td>
			<td>
				<%= form_for(cart_item, url: public_cart_item_path(cart_item.id)) do |f| %>
   　　　　　　　 　　<%= f.number_field :amount %>
    　　　　　　　　　<%= f.submit "変更" %>
  　　　　　　　　<% end %>
 　　　　　　　</td>
			<td><%= cart_item.item.untax_price*108/100*cart_item.amount %></td>
			<td><%= link_to "削除する",  public_cart_item_path(cart_item.id), method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>

