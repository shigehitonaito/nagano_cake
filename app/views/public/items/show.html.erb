<br>
<%= attachment_image_tag @item, :image, :fill, 60, 60, fallback: "no_image.png", size: "100x100" %><br>
<h2><%= @item.name %></h2><br>
<%= @item.introduction %><br>
¥<%= @item.untax_price*108/100 %>円(税込)




<%= form_for(@cart_item, url: public_cart_items_path)do |f| %>
 <% if @item.posted_by?(current_end_user) %>
  <P>こちらの商品は既にカートに入っています。</P>
  <% else %>
   <%= f.number_field :amount %>
   <%= f.hidden_field :item_id, value:@item.id %>
   <%= f.hidden_field :end_user_id, value:current_end_user.id %>
    <%= f.submit 'カートに入れる' %>
  <% end %>

<% end %>
