<h1>購入情報入力画面</h1>

<%= flash[:order] %>



<%= form_with url:  public_orders_verification_path, method: :get, local: true do |f| %>
  <h3>お支払い方法</h3>
  <%= f.radio_button :payment, 0 %>
  <%= f.label :payment, "クレジットカード" %>
  <%= f.radio_button :payment , 1 %>
  <%= f.label :payment, "銀行振り込み" %>

  <h3>お届け先</h3>
  <%= radio_button_tag :address_choice, "address1" %>
  <%= f.label :address, "自身の住所へ配送" %>
  <%= @user.post_number %><%= @user.address %><br>
  <%= @user.family_name %><%= @user.first_name %><br>

  <%= radio_button_tag :address_choice, "address2" %>
  <%= f.label :address, "登録先から選択" %>
  <%= f.select :address, Address.where(end_user_id: current_end_user.id).map { |a| [a.post_number + a.address + a.name, a.id]} %><br>
    
  <%= radio_button_tag :address_choice, "address3" %>
    <table>
		<tbody>
			<%= f.label :address, "新しいお届け先" %>
			<tr>
				<td><%= f.label :address, "郵便番号(ハイフンなし)" %></td>
				<td><%= text_field_tag :new_post_number %></td>
			</tr>
			<tr>
				<td><%= f.label :address, "住所" %></td>
				<td><%= text_field_tag :new_address %></td>
			</tr>
			<tr>
				<td> <%= f.label :address, "宛名" %></td>
				<td><%= text_field_tag :new_name %></td>
			</tr>
		</tbody>
	</table>
  <%= f.hidden_field :sum_price, value:@sum %>
  <%= f.submit "確認画面に進む"%>
  <% end %>